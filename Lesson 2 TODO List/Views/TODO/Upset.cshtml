@model TODOVM
@{
    var title = "Create a New TODO task";
}

<div>
    <form method="post" asp-action="Upset">
        @if(Model.TODO != null)
        {
            title = "Update TODO task";
        }
        <h2 class="mb-3">@title</h2>

        <div class="form-group row">
            <label asp-for="TODO.Id" class="col-4"></label>
            <input asp-for="TODO.Id" class="form-control col-8">
            <span asp-validation-for="TODO.Id" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TODO.Header" class="col-4"></label>
            <input asp-for="TODO.Header" class="form-control col-8">
            <span asp-validation-for="TODO.Header" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TODO.Username" class="col-4"></label>
            <input asp-for="TODO.Username" class="form-control col-8">
            <span asp-validation-for="TODO.Username" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TODO.Doing" class="col-4"></label>
            <input asp-for="TODO.Doing" class="form-control col-8">
            <span asp-validation-for="TODO.Doing" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TODO.Status" class="col-4"></label>
            <input asp-for="TODO.Status" class="form-control col-8">
            <span asp-validation-for="TODO.Status" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="TODO.FinishDate" class="col-4"></label>
            <input asp-for="TODO.FinishDate" class="form-control col-8">
            <span asp-validation-for="TODO.FinishDate" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row d-flex justify-content-between">
            <div class="col-6">
                <input type="submit" class="btn btn-success w-100" value="Create">
            </div>
            <div class="col-6">
                <a asp-action="Index" class="btn btn-info w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

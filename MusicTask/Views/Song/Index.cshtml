@model IEnumerable<Song>

@{
    ViewData["Title"] = "Song";
}

<div class="container d-flex justify-content-between">
    <div>
        <h1 class="p-3">Song List</h1>
    </div>
    <div>
        <div class="mb-2 text-right">
            <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">Create Genre</a>
            <a asp-controller="Song" asp-action="Upset" class="btn btn-primary">Create Song</a>
        </div>
    </div>
</div>

<div class="container d-flex">
    @if (Model.Any())
    {
        @foreach (Song item in Model)
        {
            <div class="bg-light p-3 rounded m-1 align-items-center">
                <div><h4><b>@item.Name</b></h4></div>
                <div><p>@item.Performer</p></div>
                <hr>
                <div>Id : @item.Id</div>
                <div>Year : @item.Year</div>
                <div>Genre : @item.Genre.Name</div>
                <div>Text : @item.Text</div>
                <div class="d-flex justify-content-between p-1">
                    <a asp-controller="Song" asp-route-Id="@item.Id" asp-action="Upset" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-controller="Song" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                </div>
            </div>
        }
    }
    else
    {
        <p>No songs exist.</p>
    }
</div>